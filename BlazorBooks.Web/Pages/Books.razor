@page "/"
@inherits BooksBase

@if (Books == null)
{
    <h3>Loading books...</h3>
}
else
{
    <h3 class="mb-5">Books</h3>

    var bookCount = Books.Count();

    @if (bookCount > 0)
    {
        @foreach (var bookGroup in GetGroupedBooksByGenre())
        {
            <h4>@GetGenreName(bookGroup)</h4>

            <div class="row mt-3">
                    <DisplayBooks Books="@bookGroup.Take(4)"></DisplayBooks>
            </div>
            <hr class="mb-3"/>
        }
    }
}